
		
<ComicCreator>:
	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'top'
		ToolBox:
			id: _tool_box
			drawing_space: _drawing_space
			comic_creator: root
			size_hint: None, None
			width: 200 
			
	AnchorLayout:
		anchor_x: 'right'
		anchor_y: 'top'
		DrawingSpace:
			id: _drawing_space
			tool_box: _tool_box
			options: _options
			status_bar: _status_bar
			size_hint: None, None
			width: root.width - _tool_box.width
			height: root.height - _options.height - _status_bar.height
	
	AnchorLayout:
		anchor_x: 'center'
		anchar_y: 'bottom'
		BoxLayout:
			orientation: 'vertical'
			GeneralOptions:
				id: _options
				drawing_space: _drawing_space
				comic_creator: root
				size_hint: 1, None
				height: 125
			StatusBar:
				id: _status_bar
				size_hint: 1, None
				height: 100

		